@model IYTEthesis.Model.Customer
@{
    ViewBag.Title = "Details";
}

<div class="Row">
<div class="col-lg-1">.</div>
<div class="col-lg-1" style="background-color: aliceblue">    
    <h4>Customer's details</h4>
</div>

<div class="col-lg-9" style="background-color: white">

<fieldset>
    <legend></legend>

    <div class="display-label">
        <b>@Html.DisplayNameFor(model => model.CustomerName) : </b> @Html.DisplayFor(model => model.CustomerName)
    </div>

    <div class="display-label">
        <b>@Html.DisplayNameFor(model => model.Email) : </b> @Html.DisplayFor(model => model.Email)
    </div>

    <div class="display-label">
         <b>@Html.DisplayNameFor(model => model.GSM) : </b> @Html.DisplayFor(model => model.GSM)
    </div>

    <div class="display-label">
         <b>@Html.DisplayNameFor(model => model.Lat) : </b> @Html.DisplayFor(model => model.Lat)
    </div>

    <div class="display-label">
         <b>@Html.DisplayNameFor(model => model.Lng) : </b> @Html.DisplayFor(model => model.Lng)
    </div>

    <div class="display-label">
         <b>@Html.DisplayNameFor(model => model.LastUpdate) : </b> @Html.DisplayFor(model => model.LastUpdate)
    </div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.CustomerId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
</div>

</div><!-- Row-->