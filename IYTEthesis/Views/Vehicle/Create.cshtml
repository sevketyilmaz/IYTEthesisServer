@model IYTEthesis.Model.Vehicle
@{
    ViewBag.Title = "Create Vehicle";
}


<div class="Row">
<div class="col-lg-1">.</div>
<div class="col-lg-1" style="background-color: aliceblue">    
    <h4>Create vehicle</h4>
</div>

<div class="col-lg-9" style="background-color: white">
    
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>
        <div class="editor-label">
            <b>@Html.LabelFor(model => model.NumberPlate) :</b>
            @Html.EditorFor(model => model.NumberPlate)
            @Html.ValidationMessageFor(model => model.NumberPlate)
        </div>

         <div class="editor-label">
            <b>@Html.LabelFor(model => model.OwnerId, "Owner") :</b>
            @Html.DropDownList("OwnerId", String.Empty)
            @Html.ValidationMessageFor(model => model.OwnerId)
        </div>

        <div class="editor-label">
            <b>@Html.LabelFor(model => model.DriverId, "Driver") :</b>
            @Html.DropDownList("DriverId", String.Empty)
            @Html.ValidationMessageFor(model => model.DriverId)
        </div>

        <div class="editor-label">
            <b>@Html.LabelFor(model => model.Lat) :</b>
            @Html.EditorFor(model => model.Lat)
            @Html.ValidationMessageFor(model => model.Lat)
        </div>

        <div class="editor-label">
            <b>@Html.LabelFor(model => model.Lng) :</b>
            @Html.EditorFor(model => model.Lng)
            @Html.ValidationMessageFor(model => model.Lng)
        </div>

        <div class="editor-label">
            <b>@Html.LabelFor(model => model.LastUpdate) :</b>
            @Html.EditorFor(model => model.LastUpdate)
            @Html.ValidationMessageFor(model => model.LastUpdate)
            <p><input type="submit" value="Create" /></p>
        </div>
        
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

</div>

</div><!--Row-->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}